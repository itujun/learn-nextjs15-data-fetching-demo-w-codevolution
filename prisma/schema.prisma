// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  // url      = env("DATABASE_URL")
  url      = "file:app.db"
} 

// buat tabel Products 
model Products {
  id          Int @id @default(autoincrement())
  title       String
  price       Int
  description String?
}
// lalu jalankan migrasi: npx prisma migrate dev --name init